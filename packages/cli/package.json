{
  "name": "@capsulajs/capsulahub-cli",
  "version": "0.0.1",
  "description": "The package, that provides an ability to use CLI to run and build Capsulahub application.",
  "main": "bin/index.js",
  "module": "bin/index.js",
  "types": "bin/index.d.ts",
  "author": "CapsulaJS",
  "license": "MIT",
  "private": false,
  "bin": {
    "capsulahub": "./bin/cli.js"
  },
  "scripts": {
    "build": "rimraf lib && tsc --build tsconfig-cli.json && node setBinPermission.js",
    "start": "rimraf lib && tsc --build tsconfig-cli.json --watch",
    "test": "npm-run-all -p -r start cypress:run",
    "test:debug": "npm-run-all -p -r start-cdn-emulator-1111 capsulahub-run cypress:debug",
    "1-capsulahub-run": "capsulahub run --token=http://localhost:1111/port-1111/configuration --configProvider=httpFile --port=8888",
    "3-capsulahub-run": "capsulahub run --token=http://localhost:1111/port-1111/configuration",
    "lint": "yarn lint:md && yarn lint:ts",
    "prettier": "prettier --write '{src,tests,cypress}/**/*.{js,ts,tsx}'",
    "clean": "rimraf lib dist node_modules",
    "cypress:run": "cypress run --browser chrome",
    "cypress:debug": "cypress open",
    "cypress:run-1": "cypress run --browser chrome --spec \"cypress/integration/capsulahub_run/success/1-capsulahub_run.test.js\"",
    "cypress:run-3": "cypress run --browser chrome --spec \"cypress/integration/capsulahub_run/success/3-capsulahub_run.test.js\"",
    "test-1-capsulahub-run": "npm-run-all -p -r start-cdn-emulator-1111 1-capsulahub-run cypress:run-1",
    "test-1-capsulahub-run:debug": "npm-run-all -p -r start-cdn-emulator-1111 1-capsulahub-run cypress:debug",
    "test-3-capsulahub-run": "npm-run-all -p -r start-cdn-emulator-1111 3-capsulahub-run cypress:run-3",
    "test-3-capsulahub-run:debug": "npm-run-all -p -r start-cdn-emulator-1111 3-capsulahub-run cypress:debug",
    "lint:md": "remark . --rc-path ../../.remarkrc --output",
    "lint:ts": "tslint '{src,tests,cypress}/**/*.{ts,tsx}' --fix",
    "start-cdn-emulator-1111": "yarn build-cdn-emulator && cpy cypress/support/cdn-emulator/port-1111/configuration/workspace.json cdn-emulator/port-1111/configuration && http-server cdn-emulator -p 1111 --cors",
    "build-cdn-emulator": "rimraf cdn-emulator && webpack --env.production=true"
  },
  "dependencies": {
    "@capsulajs/capsulahub-workspace": "next",
    "commander": "^2.20.0",
    "express": "^4.17.1",
    "parcel-bundler": "^1.12.3",
    "rxjs": "6.5.2"
  },
  "devDependencies": {
    "@capsulajs/capsulajs-configuration-service": "^0.1.12",
    "@types/express": "^4.17.0"
  }
}
