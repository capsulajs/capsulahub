{
  "name": "@capsulajs/capsulahub-widget-template",
  "version": "0.0.1",
  "description": "A widget template package for an extension",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "CapsulaJS",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "yarn build:lib && yarn build:dist",
    "start": "webpack-dev-server --env.production=false",
    "test": "npm-run-all -p -r start cypress:run",
    "test:debug": "npm-run-all -p -r start cypress:debug",
    "lint": "yarn lint:md && yarn lint:ts",
    "prettier": "prettier --write '{src,tests}/**/*.{js,ts,tsx}'",
    "clean": "rimraf lib dist node_modules",
    "doc": "typedoc src/api --out ./doc --mode file --hideGenerator --readme ./documentation.md",
    "build:dist": "rimraf dist && webpack --env.production=true",
    "build:lib": "rimraf lib && tsc",
    "cypress:run": "cypress run --browser chrome",
    "cypress:debug": "cypress open",
    "lint:md": "remark . --rc-path ../../.remarkrc --output",
    "lint:ts": "tslint '{src,tests}/**/*.{ts,tsx}' --fix"
  },
  "dependencies": {
    "@capsulajs/capsulahub-utils": "^0.0.1"
  }
}
